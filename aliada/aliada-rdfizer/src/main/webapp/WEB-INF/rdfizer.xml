<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="  
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
	<context:annotation-config/>
	<context:component-scan base-package="eu.aliada" />
	<bean id="configuration" class="org.apache.camel.spring.spi.BridgePropertyPlaceholderConfigurer">
  		<property name="locations">
  		    <list>
		        <value>classpath:default-pipeline-settings.properties</value>
		        <value>classpath:pipeline-settings.properties</value>
		    </list>
  		</property>
  		<property name="ignoreResourceNotFound" value="true"/> 
	</bean>

	<!-- conversion pipeline definition -->
	<import resource="pipeline-definition.xml" />
	
	<!-- Supported formats (with their specific settings) -->
	<import resource="marc-settings.xml" />
	<import resource="lido-settings.xml" />
		
	<!-- 
		TODO: A Cassandra connector for storing records during the conversion process 
	 -->
	 
	 <!-- 
	 	TODO: RDF Store connector (specific 2 Virtuoso or a generic one?)
	  -->
	 
	 <!-- 
	 	Shared processors 
	  -->
	<bean id="validate_input_path" class="eu.aliada.rdfizer.kernel.logic.ValidateInputPath" />
	

</beans>