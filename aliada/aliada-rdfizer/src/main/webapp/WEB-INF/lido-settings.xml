<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="  
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">
       
	<bean id="subject-detection-rule" class="eu.aliada.rdfizer.pipeline.format.lido.SubjectDetectionRule" scope="prototype">
		<constructor-arg value="lido/lidoRecID | lido/category"/>
	</bean>
	
	<bean id="LidoRecID" class="eu.aliada.rdfizer.pipeline.format.lido.LidoRecIDRule" scope="prototype">
		<constructor-arg value="lido/lidoRecID/text()"/>
	</bean>
	
	<bean id="lido-registry" class="eu.aliada.rdfizer.pipeline.rules.Registry" scope="prototype">
		<constructor-arg ref="subject-detection-rule"/>
		<constructor-arg>
			<list>
				<ref local="LidoRecID"/>
			</list>
		</constructor-arg>
	</bean>
</beans>